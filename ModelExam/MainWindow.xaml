<Window x:Class="ModelExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModelExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Window.Background>
        <ImageBrush x:Name="backgr"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <Frame Name="frmMain" NavigationUIVisibility="Hidden" Margin="0,0,0,0.5" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Stretch" Grid.RowSpan="1" Margin="0,0,0,10">
            <StackPanel.Background>
                <SolidColorBrush Color="#FF8C86BC" Opacity="0.6"/>
            </StackPanel.Background>
            <StackPanel HorizontalAlignment="Center" >
                <TextBlock Text="Компания COREi" FontSize="30" Margin="0,5,0,0" Foreground="Black" FontFamily="Segoe UI Black" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
